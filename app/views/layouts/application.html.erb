<!DOCTYPE html>
<html>
  <head>
    <title>Klaxon</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>
  </head>

  <body>
    <nav class="navbar navbar-inverse" id="top-nav">
      <div class="container">
        <img class="brand" src="assets/klaxon-logo.png" alt="Klaxon Logo">

        <div class="navbar-header" id="hamburger">
          <button type="button" class="navbar-toggle collapsed pull-left" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle Navigations</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        </div><!--end hamburger-->

        <div class="collapse navbar-collapse" id="main-nav">
        <ul class="nav navbar-nav navbar-left" id="nav-links">
          <li id="Mens">
            <a href="#">Mens</a>
          </li>
          <li id="Womens">
            <a href="#">Womens</a>
          </li>
          <li id="Goods">
            <a href="#">Goods</a>
          </li>
        </ul>
      </div><!--end main nav-->
      </div><!--end container-fluid-->
    </nav><!--end top navigation-->

    <%= yield %>

    <footer>
      <div class="container" id="header">
        <div class="content">
          <div class="row">
            <div class="col-md-4" id="Social">
              <h5>Get Social</h5>
              <p>Facebook Instagram Pinterest</p>
            </div>
            <div class="col-md-4" id="Instagram">
              <h5>Instagram Feed</h5>
              <div class="gallery-feed">
                <img src="Blue-Wmn-Social.png">
              </div>
            </div>
            <div class="col-md-4" id="News">
              <h5>Get the Newsletter</h5>
              <p>We promise to only send exciting things.</p>
              <form id="email_signup_footer">
                <input type="email" name="email" class="validate_email" placeholder="your email address">
                <button type="submit" class="submit_button">Sign Up</button>
              </form>
            </div>
          </div><!--end row-->
          <hr>
          <ul class="navigation pull-left">
            <li><a href="#">Home</a></li>
            <li><a href="#">Shipping</a></li>
            <li><a href="#">FAQ</a></li>
            <li><a href="#">Contact</a></li>
          </ul>
        </div><!--end content-->
          <div class="copyright pull-right">
            &copy; 2017 Klaxon
          </div><!--end copyright-->
      </div><!--end header-->
    </footer>
  </body>
</html>
