<%= form_for(product) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="col-sm-12 col-md-6 form-group" id="edit-field-left">
    <div class="field">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="field">
      <%= form.label :description %>
      <%= form.text_area :description, class: "form-control" %>
    </div>

    <div class="field">
      <%= form.label :image_url %>
      <%= form.url_field :image_url, class: "form-control", type: "url", placeholder: "Enter url", id: "example-text-input" %>
    </div>
  </div>

   
  <div class="col-sm-12 col-md-4 form-group" id="edit-field-right">
    <div class="field">
      <%= form.label :color %>
      <%= form.text_field :color, class: "form-control" %>
    </div>

     <div class="field">
      <%= form.label :price %>
      <%= form.number_field :price, class: "form-control" %>
    </div>

    <br>

    <div class="actions">
      <%= form.submit class: "btn btn-default" %>
    </div>

  </div>
<% end %>
