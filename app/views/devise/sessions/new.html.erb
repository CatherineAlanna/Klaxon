<div class="wrapper" id="form-register">
  <form class="form-signup">
    <h2 class="form-signin-heading">Log In</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="form-group">
        <%= f.email_field :email, autofocus: true, class: "form-control", type: "email", placeholder: "Enter your email", id: "email-signin" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off", class: "form-control", type: "password", placeholder: "Enter your password", id: "password-signin" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Log in", class: "btn btn-large btn-default btn-block" %>
    <% end %>

    <%= render "devise/shared/links" %>
      </div>
  </form>
</div>
