<div class="wrapper" id="form-register">
  <form class="form-signup">
    <h2 class="form-signup-heading">Sign up</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      
    <br>

        <div class="form-group" id="email-box">
          <%= f.email_field :email, autofocus: true, class: "form-control", type: "email", placeholder: "Enter your email", id: "email-signup" %>
        </div>

        <div class="form-group" id="password-box">
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", class: "form-control", type: "password", placeholder: "Enter a Password", id: "password-signup" %>
        </div>

        <div class="form-group" id="confirm-box">
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", type: "password", placeholder: "Confirm your Password", id: "password-confirm" %>
        </div>

        <div class="action">
          <%= f.submit "Sign up", class: "btn btn-large btn-default btn-block" %>
    
      <% end %>

      <%= render "devise/shared/links" %>
        </div>
  </form>
</div>
